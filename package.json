{
  "name": "coding-accelerator",
  "displayName": "Coding Accelerator",
  "description": "Accelerate Code Development Toolset",
  "publisher": "xuping.huang",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.30.0"
  },
  "categories": [
    "Formatters",
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "codeUtils.nodeToggleOn",
        "title": "node switch on",
        "icon": {
          "light": "media/light/switchOn.svg",
          "dark": "media/dark/switchOn.svg"
        }
      },
      {
        "command": "codeUtils.nodeToggleOff",
        "title": "node switch off",
        "icon": {
          "light": "media/light/switchOff.svg",
          "dark": "media/dark/switchOff.svg"
        }
      },
      {
        "command": "node.execute",
        "title": "execute node default",
        "icon": {
          "light": "media/light/execute.svg",
          "dark": "media/dark/execute.svg"
        }
      },
      {
        "command": "config.property.setting",
        "title": "set config property value",
        "icon": {
          "light": "media/light/edit.svg",
          "dark": "media/dark/edit.svg"
        }
      },
      {
        "command": "clipboard.paste",
        "title": "Paste"
      }
    ],
    "keybindings": [
      {
        "command": "clipboard.paste",
        "key": "ctrl+v",
        "mac": "cmd+v",
        "when": "editorTextFocus"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "toolset-explorer",
          "title": "Coding Accelerator Toolset",
          "icon": "media/toolset.svg"
        }
      ]
    },
    "views": {
      "toolset-explorer": [
        {
          "id": "codeUtils",
          "name": "Coding Utilities"
        },
        {
          "id": "codeGenerators",
          "name": "Generator Code Utilities"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "codeUtils.nodeToggleOff",
          "when": "viewItem =~ /switchable:off/",
          "group": "inline"
        },
        {
          "command": "codeUtils.nodeToggleOn",
          "when": "viewItem =~ /switchable:on/",
          "group": "inline"
        },
        {
          "command": "node.execute",
          "when": "viewItem =~ /:executable/",
          "group": "inline"
        },
        {
          "command": "config.property.setting",
          "when": "viewItem =~ /:configurable/",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "set DEBUG=test*&&tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/debug": "^4.1.4",
    "@types/faker": "^4.1.5",
    "@types/js-yaml": "^3.12.1",
    "@types/json5": "^0.0.30",
    "@types/lodash": "^4.14.123",
    "@types/mocha": "^2.2.42",
    "@types/mustache": "^0.8.32",
    "@types/node": "^10.2.0",
    "debug": "^4.1.1",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1",
    "vscode": "^1.1.33"
  },
  "dependencies": {
    "clipboardy": "^2.0.0",
    "faker": "^4.1.0",
    "joi": "^14.3.1",
    "js-yaml": "^3.13.1",
    "json5": "^2.1.0",
    "lodash": "^4.17.11",
    "merge-deep": "^3.0.2",
    "mustache": "^3.0.1",
    "xlsx": "^0.14.3"
  }
}
